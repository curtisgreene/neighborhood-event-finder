<h1>Search for Events</h1>

<%= form_tag events_path method:'post' do %>
<%= label_tag :name %>
<%= text_field_tag "name" %><br>
<%= label_tag :boroughs %>
<% [['Bronx', 'Bx'], ['Brooklyn', 'Bk'], ['Manhattan', 'Mn'], ['Queens', 'Qn'], ['Staten Island', 'SI']].each do |b| %>
	<%= label_tag(b.first) %>
  <%= check_box_tag("boroughs[]", b.last) %>
<% end %><br>
<%= label_tag :zip %>
<%= number_field_tag "zip" %><br>
<%= submit_tag "Search" %>
<% end %>
