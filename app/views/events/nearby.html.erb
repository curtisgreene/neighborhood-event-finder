<br>
<h4>Upcoming events in your borough</h4>
<div class="divider"></div>

<ul>
  <% @nearby_events.each do |event| %>
    <li>
     <h5><%= link_to event.name, event_path(event) %></h5>
     <ul>
       <li>
         <%= readable_time(event.start_time) %>
       </li><br>
     </ul>
    </li>
  <% end %>
</ul>

<div class="divider"></div><br><br>

<div class="row">
  <div class="col s12 z-depth-4">
    <%= week_calendar events: @nearby_events do |date, nearby_events| %>
      <%= date %>
      <% nearby_events.each do |nearby_event| %>
    	  <div>
    	    <%= link_to nearby_event.name, event_path(nearby_event) %>
    	  </div><br>
      <% end %>
    <% end %>
    <br>
  </div>
</div>
