<h3><%= @event.name %></h3>

<% if @event.description.present? %>
  <h5><%= @event.description %></h5>
<% end %>

<% if @event.start_time.present? %>
  <p><%= readable_time(@event.start_time) %>
  <% if @event.end_time.present? %>
  <%= "- #{readable_time(@event.end_time)}" %>
  <% end %></p>
<% end %>

<% if @event.location.present? %>
  <p><%= @event.location %></p>
<% end %>

<% if @event.address.present? %>
  <p><%= @event.address %>
<% end %>
<% if @event.city.present? %>
  <br><%= @event.city %>
<% elsif @event.borough.present? %>
  <br><%= borough_names(@event.borough) %>
<% end %></p>

<% if @event.website.present? %>
  <p><%= link_to "Learn more about this event", @event.website, target: "_blank" %></p>
<% end %>

<% if current_user.events.include?(@event)%>
<p>You have already saved this event.</p>
<% else %>

<%= button_to "Create Appointment", "/appointments/#{@event.id}", method:'post', class: 'waves-effect indigo lighten-1 btn'%>

<% end %><br><br>

<div class="row">
  <div class="col s12 z-depth-4">
    <div class="video-container">
      <iframe width="300" height="300" frameborder="0" style="border:0"
 src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDAMXzEJ-6rnKg4ARdVVzNN6iThBa-aLwA&q=<%= @event.address %>"
 allowfullscreen>
      </iframe>
    </div>
  </div>
</div>
