<h1>Learn more about <%= @event.name %></h1>
<ul>
  <li>
    <%= @event.description %>
  </li>
  <li>
    <%= @event.start_time %>
  </li>
  <li>
    <%= @event.borough.join(", ") %>
  </li>
  <li>
    <%= @event.location %>
  </li>
</ul>

<% if current_user.events.include?(@event)%>
<p>You are already attending this event! Have fun!</p>
<% else %>
<%= link_to "Create Appointment", "/appointments/#{@event.id}", method:'post'%>
<% end %>
