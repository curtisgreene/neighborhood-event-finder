<div class="row">
  <div class="col s12">
    <h1>Hello <%= @user.name %>!</h1>
  </div>
</div>

<div class="row">
  
  <div class="col s6">
    <h3>My Info</h3>
  </div>
  <div class="col s6">
    <h3>Upcoming Events</h3>
  </div>

</div>

<div class="row">

  <div class="col s6">
    <h4>Name:</h4>
    <p><%= @user.name %></p>
    <h4>Zip Code:</h4>
    <p><%= @user.zip %></p>
    <h4>Borough</h4>
    <p><%= borough_name(@user.borough) %></p>
    <h4>Username:</h4>
    <p><%= @user.username %></p>
    <% if session[:user_id] == @user.id %>
      <p><%= link_to "Edit My Information", edit_user_path(@user) %></p>
    <% end %>
  </div>

  <div class="col s6">
    <ul>
    <% @user.events.each do |event| %>
      <li><%= link_to event.name, event_path(event) %> - <%= readable_time(event.start_time) %>
      <ul>
        <li><%= link_to "Delete", cancel_path(:event_id => event.id), method: 'delete' %></li><br>
      </ul>
      </li>
    <% end %>
    </ul>
  </div>

</div>

<div class="row">
  <div class="col s12">
    <%= month_calendar events: @events do |date, events| %>
      <%= date %>
      <% events.each do |event| %>
    	  <div>
    	    <%= link_to event.name, event_path(event) %>
    	  </div>
      <% end %>
    <% end %>
  </div>
</div>