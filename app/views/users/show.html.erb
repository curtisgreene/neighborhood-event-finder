<div class="row">
  <div class="col s12">
    <h1 class="center-align">Hello <%= @user.name %>!</h1>
  </div>
</div>

<div class="row">

  <div class="col s8">
    <div class="card blue-grey lighten-5">
      <div class="card-content black-text">
        <h4>My Upcoming Events</h4>
        <div class="divider"></div>
        <ul>
        <% @upcoming_events.each do |event| %>
          <li><%= link_to event.name, event_path(event) %> - <%= readable_time(event.start_time) %>
          <ul>
            <li><%= link_to "Delete", cancel_path(:event_id => event.id), method: 'delete' %></li><br>
          </ul>
          </li>
        <% end %>
        </ul>
      </div>
    </div>  
  </div>

  <div class="col s4">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <h4>My Info</h4>
        <div class="divider"></div>
        <h5>Name:</h5>
        <p><%= @user.name %></p>
        <h5>Zip Code:</h5>
        <p><%= @user.zip %></p>
        <h5>Borough:</h5>
        <p><%= borough_name(@user.borough) %></p>
        <h5>Username:</h5>
        <p><%= @user.username %></p>
        <% if session[:user_id] == @user.id %>
          <div class="card-action">
            <%= link_to "Edit My Information", edit_user_path(@user) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

<div class="divider"></div>

<div class="row">
  <div class="col s12">
    <br>
    <h3 class="center-align">My Calendar</h3>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= month_calendar events: @upcoming_events do |date, events| %>
      <%= date %>
      <% events.each do |event| %>
    	  <br>
        <div>
    	    <%= link_to event.name, event_path(event) %>
    	  </div>
      <% end %>
    <% end %>
  </div>
</div>